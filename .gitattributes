# Normalize line endings
* text=auto eol=lf
# 1C files are text
*.bsl text eol=lf diff
*.os text eol=lf diff
*.sdbl text eol=lf diff
*.xml text eol=lf diff
*.txt text eol=lf
# Binary files
*.epf binary
*.erf binary
*.cf binary
*.cfu binary
*.dt binary
# Shell scripts
*.sh text eol=lf
*.ps1 text eol=crlf
*.bat text eol=crlf
*.cmd text eol=crlf
*.gz filter=lfs diff=lfs merge=lfs -text
